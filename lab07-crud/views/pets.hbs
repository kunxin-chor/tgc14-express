{{#extends 'base'}}

{{#block 'content'}}
<h1>All Available Pets</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each allPets}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.category.name}}
            </td>
            <td>
                {{this.status}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}